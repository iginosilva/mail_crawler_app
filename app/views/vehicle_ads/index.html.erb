<p id="notice"><%= notice %></p>

<h1>Vehicle Ads</h1>

<table>
  <thead>
    <tr>
      <th>Customer name</th>
      <th>Customer phone</th>
      <th>Customer message</th>
      <th>Vehicle interest</th>
      <th>Ad link</th>
      <th>Brand</th>
      <th>Model name</th>
      <th>Release year</th>
      <th>Price</th>
      <th>Mileage</th>
      <th>Accessories</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicle_ads.each do |vehicle_ad| %>
      <tr>
        <td><%= vehicle_ad.customer_name %></td>
        <td><%= vehicle_ad.customer_phone %></td>
        <td><%= vehicle_ad.customer_message %></td>
        <td><%= vehicle_ad.vehicle_interest %></td>
        <td><%= vehicle_ad.ad_link %></td>
        <td><%= vehicle_ad.brand %></td>
        <td><%= vehicle_ad.model_name %></td>
        <td><%= vehicle_ad.release_year %></td>
        <td><%= vehicle_ad.price %></td>
        <td><%= vehicle_ad.mileage %></td>
        <td><%= vehicle_ad.accessories %></td>
        <td><%= link_to 'Show', vehicle_ad %></td>
        <td><%= link_to 'Edit', edit_vehicle_ad_path(vehicle_ad) %></td>
        <td><%= link_to 'Destroy', vehicle_ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

